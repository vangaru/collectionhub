@page "{id}"
@model CollectionHub.Areas.Identity.Pages.Account.Manage.ManageItem

@{
    ViewData["Title"] = "Manage item";
    ViewData["ActivePage"] = null;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="validation text-danger"></div>
            <div class="form-group">
                <label asp-for="ApplicationUser.UserName"></label>
                <input asp-for="ApplicationUser.UserName" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Item.Name"></label>
                <input asp-for="Input.Name" value="@Model.Item.Name" class="form-control">
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Tags"></label>
                <input asp-for="Input.Tags" value="@Model.TagsString" class="form-control autocomplete">
                <span asp-validation-for="Input.Tags" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
</div>

